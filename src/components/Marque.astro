---
import ToolCard from './ToolCard.astro'
import { Marquee } from '@/components/magicui/marquee'
import { SKILLS } from './consts/skills'
---

<div class="relative flex w-full flex-col items-center justify-center overflow-hidden">
	<Marquee pauseOnHover className="[--duration:35s]" client:load>
		{SKILLS.map((tool) => <ToolCard key={tool.name} {...tool} />)}
	</Marquee>
	<Marquee pauseOnHover reverse className="[--duration:35s]" client:load>
		{SKILLS.map((tool) => <ToolCard key={tool.name} {...tool} />)}
	</Marquee>
	<div class="from-background pointer-events-none absolute inset-y-0 left-0 w-1/4 bg-gradient-to-r">
	</div>
	<div
		class="from-background pointer-events-none absolute inset-y-0 right-0 w-1/4 bg-gradient-to-l"
	>
	</div>
</div>
