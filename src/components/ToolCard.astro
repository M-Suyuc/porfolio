---
import type { Skills } from '@/types/skills'

const { name, image } = Astro.props as Skills
---

<figure
	class="relative z-50 flex h-full cursor-pointer items-center justify-center gap-1 overflow-hidden rounded-md border border-gray-50/[.15] p-2 hover:bg-gray-500/[.15]"
>
	<image.logo class="size-5" />
	<span class="font-mono text-sm">{name}</span>
</figure>
