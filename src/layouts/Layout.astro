---
import Footer from '@/components/Footer.astro'
import Header from '@/components/Header.astro'
import { Spotlight } from '@/components/ui/Spotlight'
import '@/styles/globals.css'

import Analytics from '@vercel/analytics/astro'

interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/avatar.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="relative overflow-x-hidden">
		<!-- Polyfills inline para mÃ¡xima compatibilidad -->
		<script>
			if (!CSS.supports('animation-timeline', 'scroll()')) {
				const script = document.createElement('script')
				script.src = 'https://flackr.github.io/scroll-timeline/dist/scroll-timeline.js'
				document.head.appendChild(script)
			}

			if (!CSS.supports('backdrop-filter', 'blur(10px)')) {
				document.documentElement.classList.add('no-backdrop-filter')
			}
		</script>
		{/* Top Fade Grid Background */}
		<div
			class="absolute inset-0 -z-10 h-screen"
			style={{
				backgroundImage: `
        linear-gradient(to right, #0D0D0D 1px, transparent 1px),
        linear-gradient(to bottom, #0D0D0D 1px, transparent 1px)
      `,
				backgroundSize: '50px 50px',
				WebkitMaskImage: 'radial-gradient(ellipse 70% 60% at 50% 0%, #000 60%, transparent 100%)',
				maskImage: 'radial-gradient(ellipse 70% 60% at 50% 0%, #000 60%, transparent 100%)'
			}}
		>
			<Spotlight />
		</div>

		<Header />

		<div class="space-y-36 lg:space-y-48">
			<slot />
		</div>
		<Footer />
		<Analytics />
	</body>
</html>

